.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}
.header {
  background-color: write;
  color: black;
  padding: 20px;
  text-align: center;
}
.content {
  flex: 1;
  padding: 20px;
}
.footer {
  background-color: write;
  padding: 10px;
  text-align: center;
}
.button-container {
  text-align: center;
  margin-top: 20px;
}
.square-button {
  width: 200px;
  /* 按钮宽度 */
  height: 50px;
  /* 按钮高度 */
  background-color: #007aff;
  /* 按钮背景颜色 */
  color: white;
  /* 字体颜色 */
  border: none;
  /* 无边框 */
  border-radius: 5px;
  /* 圆角边框 */
  font-size: 16px;
  /* 字体大小 */
  cursor: pointer;
  /* 鼠标悬停时显示手形图标 */
  outline: none;
  /* 点击时不显示轮廓 */
}
.square-button:active {
  background-color: #005fcc;
  /* 按钮按下时的颜色 */
}